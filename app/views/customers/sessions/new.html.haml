- unless current_company
  %a{href: root_url, title: "SmallTaskers"}
    %img{:alt => "smalltaskers", "data-src" => image_url("smalltaskers.png"), "data-src-retina" => image_url("smalltaskers@2x.png"), :height => "48", :src => image_url("smalltaskers.png")}/
- else
  %a{href: root_url, title: current_company.name}
    %img{:alt => current_store.title, "data-src-retina" => asset_path(current_store.logo.url), :height => "48", :src => asset_path(current_store.logo.url)}/
%p.p-t-35 Sign into your account

= form_for(resource, as: resource_name, url: session_path(resource_name), class: "p-t-15", role: "form", remote: true) do |f|
  
  = devise_error_messages!
  .m-t-20.m-b-10.hide.alert.alert-warning.alert-dismissible.fade.in{role: "alert"}
  .form-group.form-group-default
    %label
    = f.label :email
    .controls
      = f.email_field :email, placeholder: "Email", required: "", class: "form-control", autofocus: true

  .form-group.form-group-default
    = f.label :password
    .controls
      = f.password_field :password, placeholder: "Credentials", required: "", class: "form-control"
  - if devise_mapping.registerable? && controller_name != 'registrations'
    = link_to "Sign up", new_registration_path(resource_name)
    %br/

  - if devise_mapping.rememberable?
    .row
      .col-md-6
        .checkbox
          = f.check_box :remember_me
          = f.label :remember_me, "Keep Me Signed in"
      
  %button.btn.btn-primary.btn-cons.m-t-10{:type => "submit", data: { "disable-with": "Logging in..." },} Sign in