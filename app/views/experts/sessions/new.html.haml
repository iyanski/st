- unless current_company
  %a{href: root_url, title: "SmallTaskers"}
    %img{:alt => "smalltaskers", "data-src" => image_url("smalltaskers.png"), "data-src-retina" => image_url("smalltaskers@2x.png"), :height => "48", :src => image_url("smalltaskers.png")}/
- else
  %a{href: root_url, title: current_company.name}
    %img{:alt => current_company.name, "data-src" => image_url(current_store.logo), "data-src-retina" => image_url(current_store.logo), :height => "48", :src => image_url(current_store.logo)}/
%p.p-t-35 Sign into your account

= form_for(resource, as: resource_name, url: new_expert_session_path, remote: true, html: {id: "new_expert_session", class: "p-t-15", role: "form"}) do |f|
  
  = devise_error_messages!
  .m-t-20.m-b-10.hide.alert.alert-warning.alert-dismissible.fade.in{role: "alert"}
  .form-group.form-group-default
    %label
    = f.label :email
    .controls
      = f.email_field :email, placeholder: "Email", required: "", class: "form-control", autofocus: true

  .form-group.form-group-default
    = f.label :password
    .controls
      = f.password_field :password, placeholder: "Credentials", required: "", class: "form-control"
  
  - if devise_mapping.rememberable?
    .row
      .col-md-6
        .checkbox
          = f.check_box :remember_me
          = f.label :remember_me, "Keep Me Signed in"
      
  .clearfix
    %button.btn.btn-primary.btn-cons.m-t-10#signin{:type => "submit", data: { "disable-with": "Logging in..." },} Login
    %a.pull-right.btn.btn-default.btn-cons.m-t-10{href: new_registration_path(resource_name)} Sign-up