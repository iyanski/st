%head
  %meta{:content => "text/html;charset=UTF-8", "http-equiv" => "content-type"}/
  %meta{:charset => "utf-8"}/
  %title SmallTaskers - Login
  %meta{:content => "width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no", :name => "viewport"}/
  %link{:href => asset_path('ico/60.png'), :rel => "apple-touch-icon"}/
  %link{:href => asset_path('ico/76.png'), :rel => "apple-touch-icon", :sizes => "76x76"}/
  %link{:href => asset_path('ico/120.png'), :rel => "apple-touch-icon", :sizes => "120x120"}/
  %link{:href => asset_path('ico/152.png'), :rel => "apple-touch-icon", :sizes => "152x152"}/
  %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
  %meta{:content => "yes", :name => "apple-touch-fullscreen"}/
  %meta{:content => "default", :name => "apple-mobile-web-app-status-bar-style"}/
  %meta{:content => "", :name => "description"}/
  %meta{:content => "", :name => "author"}/
  = stylesheet_link_tag 'auth', media: 'all', 'data-turbolinks-track' => true
  = csrf_meta_tags
  = yield :head
  %body.fixed-header
    .login-wrapper
      / START Login Background Pic Wrapper
      .bg-pic
        / START Background Pic
        %img.lazy{:alt => "", "data-src" => "https://s3.amazonaws.com/smalltaskers/tower.jpeg", "data-src-retina" => "https://s3.amazonaws.com/smalltaskers/tower.jpeg", :src => "https://s3.amazonaws.com/smalltaskers/tower.jpeg"}/
        - unless current_company
          .bg-caption.pull-bottom.sm-pull-bottom.text-white.p-l-20.m-b-20
            %h2.semi-bold.text-white
              SmallTaskers aim to break the 9-5 cubicle work environment.
            %p.small
              Images Displayed are solely for representation purposes only, All work copyright of respective owner, otherwise &copy; #{Time.now.year} <a href="http://smallTaskers.com" title="SmallTaskers" class="text-white">SmallTaskers</a>.
        - else
          .bg-caption.pull-bottom.sm-pull-bottom.text-white.p-l-20.m-b-20
            %h2.semi-bold.text-white
              #{current_store.description}
            %p.small
              Images Displayed are solely for representation purposes only, All work copyright of respective owner, otherwise &copy; #{Time.now.year} <a href="http://#{current_company.domain}" title="#{current_company.name}" class="text-white">#{current_company.name}</a>.
      .login-container.bg-white
        .p-l-50.m-l-20.p-r-50.m-r-20.p-t-50.m-t-30.sm-p-l-15.sm-p-r-15.sm-p-t-40
          = yield
          
      / END Login Right Container
    
    / BEGIN VENDOR JS
    -# = javascript_include_tag 'user', 'data-turbolinks-track' => true, 'data-turbolinks-eval' => false